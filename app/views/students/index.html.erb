<h1> All Student</h1>

<%= link_to 'New Student',new_student_path %>

<table border="1">
<thead>
<tr>
<th>Name</th>
<th>Email</th>
<th>Age</th>
<th>Action</th>
</tr>
</thead>
<tbody>
<% @students.each do |student| %>
    <tr>
    <td> <%= student.name %></td>
    <td> <%= student.email %></td>
    <td> <%= student.age %></td>
    <td>
     <%= link_to 'Show' ,student_path(student)%> |
     <%= link_to 'Edit' , edit_student_path(student)%>|
     <%= link_to 'Delete', student_path(student), method: :delete, data: { confirm: "Are you sure?" } %>
   </td>
   </tr>
   <% end %>
   </tbody>
  </table>
